@model SchoolDemoMvc.ViewModels.StudentViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style> 
    .field-validation-error {
        color: red;
    }
</style>
    

<div class="container">
    <h2>Administrar estudiantes</h2>
    <h3>Crear nuevo estudiante</h3>

    @using (Html.BeginForm("Create", "Student"))
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Student.Matricula)
            @Html.TextBoxFor(model => model.Student.Matricula, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Student.Matricula)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Student.Nombre)
            @Html.TextBoxFor(model => model.Student.Nombre, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Student.Nombre)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Student.Edad)
            @Html.TextBoxFor(model => model.Student.Edad, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Student.Edad)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Student.CourseId)
            @Html.DropDownListFor(model => model.Student.CourseId, new SelectList(Model.Courses, "Id", "Name"), new { @class = "form-control" })
        </div>

        <input type="submit" value="Guardar" />
    }

</div>