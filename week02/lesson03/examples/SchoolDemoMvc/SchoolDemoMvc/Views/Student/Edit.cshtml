@model SchoolDemoMvc.Models.Student

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Administrar estudiantes</h2>
    <h3>Editar estudiante</h3>

    @using (Html.BeginForm("Edit", "Student"))
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Matricula)
            @Html.TextBoxFor(model => model.Matricula, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nombre)
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Edad)
            @Html.TextBoxFor(model => model.Edad, new { @class = "form-control" })
        </div>

        <input type="submit" value="Guardar" />
    }

</div>
