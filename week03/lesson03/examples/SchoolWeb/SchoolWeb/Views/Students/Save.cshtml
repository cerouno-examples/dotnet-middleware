@model SchoolWeb.ViewModels.FormStudentViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .field-validation-error {
        color: red;
    }
</style>


<div class="container">
    <h2>Administrar estudiantes</h2>
    <h3>Crear nuevo estudiante</h3>

    @using (Html.BeginForm("Save", "Students"))
    {
        @Html.HiddenFor(model => model.Student.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Student.Name)
            @Html.TextBoxFor(model => model.Student.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Student.LastName)
            @Html.TextBoxFor(model => model.Student.LastName, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Student.Age)
            @Html.TextBoxFor(model => model.Student.Age, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Student.CourseId)
            @Html.DropDownListFor(model => model.Student.CourseId, new SelectList(Model.Courses, "Id", "Name"), new { @class = "form-control" })
        </div>

        <input type="submit" value="Guardar" />
    }

</div>

